@model UpdateCarDto


@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Arac Guncelleme Sayfasi</h4>
                        <p class="card-subtitle mb-4">Arac bilgilerinin eksiksiz girilmesi gerekmektedir. Kaydet'e basmayi unutmayiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="CarId" />
                            <div class="form-group">
                                <label for="exampleInputBrand">Marka</label>
                                @Html.DropDownListFor(x => x.BrandId, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Markanin Modelini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCoverImage">Kapak Fotografi</label>
                                <input type="text" class="form-control" id="exampleInputCoverImage" asp-for="CoverImageUrl" placeholder="Fotograf Linkini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFuel">Yakit Tipi</label>
                                <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Yakit Tipini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Bagaj Kapasitesi</label>
                                <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Bagaj Kapasitesini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Koltuk Adeti</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk Adetini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTransmission">Vites Tipi</label>
                                <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Vites Tipini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputKm">Kilometre</label>
                                <input type="number" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Kilometresini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBigImage">Buyuk Arac Fotografi</label>
                                <input type="text" class="form-control" id="exampleInputBigImage" asp-for="BigImageUrl" placeholder="Buyuk Fotograf Linkini Giriniz">
                            </div>


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>
            </div>
        </div>
    </div>
</div>




