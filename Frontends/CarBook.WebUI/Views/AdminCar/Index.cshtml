@model List<ResultCarsWithBrandDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla ilgili ekleme, silme, guncelleme islemlerini yapabilirsiniz...
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Kilometre</th>
                                        <th>Vites Turu</th>
                                        <th>SIL</th>
                                        <th>GUNCELLE</th>
                                        <th>DETAYLAR</th>
                                        <th>Sitede Incele</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                         <th scope="row">@count</th>
                                         <td>@item.BrandName</td>
                                         <td>@item.Model</td>
                                         <td>@item.Km</td>
                                         <td>@item.Transmission</td>
                                         <td><a href="/AdminCar/RemoveCar/@item.CarId" class="btn btn-outline-danger">Sil</a></td>
                                         <td><a href="/AdminCar/UpdateCar/@item.CarId" class="btn btn-outline-success">Guncelle</a></td>
                                         <td><a href="/CarList/CarDetail/@item.CarId" class="btn btn-outline-dark">Detaylar</a></td>
                                         <td><a href="/CarList/CarDetail/@item.CarId" class="btn btn-outline-warning">Incele</a></td>
                                         
                                         
                                     </tr>
                                    }                                                                      
                                </tbody>
                            </table>
                            <a href="/AdminCar/CreateCar/" class="btn btn-outline-primary">Arac Ekle</a>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->
        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>

